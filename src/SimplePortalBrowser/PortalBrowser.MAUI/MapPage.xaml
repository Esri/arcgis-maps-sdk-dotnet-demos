<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PortalBrowser.MAUI.MapPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:esriUI="http://schemas.esri.com/arcgis/runtime/2013"
    Title="Map Preview"
    xmlns:vm="clr-namespace:PortalBrowser.ViewModels;assembly=PortalBrowser.SharedLib">
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:PortalVM x:Key="portalVM" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <!--  MapView containing map item  -->
        <esriUI:MapView Map="{Binding Map}" />
    </Grid>
</ContentPage>
