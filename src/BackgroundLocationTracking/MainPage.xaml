<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:vm="clr-namespace:BackgroundLocationTracking"
             x:DataType="vm:MainPageViewModel"
             x:Class="BackgroundLocationTracking.MainPage">
    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <esri:MapView Map="{Binding WebMapView}" Grid.Row="0"/>
        <ScrollView Grid.Row="1" Padding="10">
            <Editor Text="{Binding LogMessage}" IsReadOnly="True" />
        </ScrollView>
    </Grid>
</ContentPage>

