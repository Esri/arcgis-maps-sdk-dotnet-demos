<Page
    x:Class="OfflineWorkflowsSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:generateMapArea="using:OfflineWorkflowsSample.GenerateMapArea"
    xmlns:downloadMapArea="using:OfflineWorkflowsSample.DownloadMapArea"
    xmlns:offlineWorkflowSample="using:OfflineWorkflowSample"
    xmlns:views="using:OfflineWorkflowSample.Views"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}">
    <Page.Resources>
        <Style TargetType="Pivot">
            <Setter Property="Background" Value="{ThemeResource SystemControlAcrylicWindowBrush}" />
        </Style>
        <DataTemplate x:DataType="offlineWorkflowSample:PortalViewModel" x:Key="PortalBrowserTemplate">
            <StackPanel>
                <offlineWorkflowSample:ItemListingGridView />
                <ListView ItemsSource="{Binding Groups}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="offlineWorkflowSample:PortalViewModel">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Light" Margin="0,10" />
                                <offlineWorkflowSample:ItemListingGridView />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Title bar -->
        <offlineWorkflowSample:CustomAppTitleBar Grid.Row="0" />
        <Pivot Grid.Row="1" x:Name="PrimaryPivot">
            
            <PivotItem Header="Offline maps">
                <ScrollViewer>
                    <StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="Featured">
                <StackPanel>
                    <ListView ItemsSource="{Binding PortalViewModel.Featured}"
                              ItemTemplate="{StaticResource PortalBrowserTemplate}"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="My content">
                <StackPanel>
                    <offlineWorkflowSample:ItemListingGridView DataContext="{Binding PortalViewModel.MyContent}" />
                    <Pivot ItemsSource="{Binding PortalViewModel.MyContent.Groups}"
                           ItemTemplate="{StaticResource PortalBrowserTemplate}">
                        <Pivot.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" />
                            </DataTemplate>
                        </Pivot.HeaderTemplate>
                    </Pivot>
                </StackPanel>
                
                
            </PivotItem>
            <PivotItem Header="My Groups">
                        <Pivot ItemsSource="{Binding PortalViewModel.Groups}"
                                  ItemTemplate="{StaticResource PortalBrowserTemplate}">
                            <Pivot.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" />
                                </DataTemplate>
                            </Pivot.HeaderTemplate>
                        </Pivot>
            </PivotItem>
            <Pivot.RightHeader>
                <Grid>
                    <views:UserProfileView HorizontalAlignment="Right" 
                                           VerticalAlignment="Top" 
                                           Margin="0,5,5,5" 
                                           Grid.Row="1"
                                           DataContext="{Binding}"/>
                </Grid>
            </Pivot.RightHeader>
        </Pivot>
    </Grid>
</Page>