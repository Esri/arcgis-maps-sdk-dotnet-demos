<UserControl x:Class="SymbolEditorApp.Controls.SymbolEditors.SimpleMarkerSymbolEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SymbolEditorApp.Controls.SymbolEditors"
             xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Color: " />
        <TextBlock Text="{Binding Symbol.Color}" />

        <xceed:ColorPicker SelectedColor="{Binding Symbol.Color, Mode=TwoWay}" />
        <xceed:PropertyGrid SelectedObject="{Binding Symbol}" MaxHeight="300" />

        <TextBlock Text="Size" />
        <TextBox Text="{Binding Symbol.Size, Mode=TwoWay}" />
    </StackPanel>
</UserControl>
