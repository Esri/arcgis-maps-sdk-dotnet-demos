<UserControl x:Class="SymbolEditorApp.Controls.SymbolEditors.MultilayerSymbolEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SymbolEditorApp.Controls.SymbolEditors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Color: " />
        <TextBlock Text="{Binding Symbol.Color}" />

        <TextBlock Text="Size" />
        <TextBox Text="{Binding Symbol.Size, Mode=TwoWay}" />

    </StackPanel>
</UserControl>
