            <local:MainPageVM.Map>
                <mapping:Map InitialViewpoint="-180,-90,180,90,4326">
                    <mapping:Map.Basemap>
                        <mapping:Basemap>
                            <mapping:OpenStreetMapLayer Name="Open Street Map" />
