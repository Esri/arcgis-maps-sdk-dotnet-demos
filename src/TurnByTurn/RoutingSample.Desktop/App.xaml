<Application x:Class="RoutingSample.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:RoutingSample.Converters"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <CalciteResources xmlns="http://schemas.esri.com/calcite/2024" Theme="efault" />
            </ResourceDictionary.MergedDictionaries>
            <conv:TimeFormatter x:Key="TimeFormatter" />
            <conv:DistanceFormatter x:Key="DistanceFormatter" />
            <conv:EnumFormatter x:Key="EnumFormatter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
