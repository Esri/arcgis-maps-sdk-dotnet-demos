<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ArcGISMapViewer.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArcGISMapViewer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Padding="5">
            <TextBlock Text="ArcGIS MapViewer Sample App" Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center" />
            <TextBlock TextWrapping="Wrap" Margin="20">
                <Run>This is a sample application that demonstrates the use of the ArcGIS Maps SDK for .NET.</Run>
                <Run>The application is built using the</Run> <Hyperlink NavigateUri="https://learn.microsoft.com/en-us/windows/apps/windows-app-sdk/">Microsoft Windows App SDK</Hyperlink> <Run> and the </Run>
                <Hyperlink NavigateUri="https://developers.arcgis.com/net">Esri ArcGIS Runtime SDK for .NET.</Hyperlink>
                <LineBreak /><LineBreak /><Run>Source code can be found at: </Run> <Hyperlink NavigateUri="https://github.com/Esri/arcgis-maps-sdk-dotnet-demos">https://github.com/Esri/arcgis-maps-sdk-dotnet-demos</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
