<UserControl x:Class="DemoApplicationAccessibility.GeometryEditing.GeometryEditing"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:local="clr-namespace:DemoApplicationAccessibility.GeometryEditing"  
             mc:Ignorable="d"   
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"  
             d:DesignHeight="450" d:DesignWidth="800">  
    <Grid>  
        <!-- Fix: Specify a valid URI for the Map property -->
        <esri:MapView x:Name="MyMapView"/>  
        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Background="White" BorderBrush="Black" BorderThickness="1" Margin="30" Padding="20" Width="375">  
            <Grid>  
                <Grid.ColumnDefinitions>  
                    <ColumnDefinition Width="*" />  
                    <ColumnDefinition Width="*" />  
                </Grid.ColumnDefinitions>  
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>  
                <Button Name="PlaceFacilityButton"  
                        Grid.Row="0"  
                        Grid.Column="0"  
                        Margin="5,5,5,5"  
                        Click="PlaceFacilityButton_Click"  
                        Content="_Place facility" />  
                <Button Name="DrawBarrierButton"  
                        Grid.Row="0"  
                        Grid.Column="1"  
                        Margin="5,5,5,5"  
                        Click="DrawBarrierButton_Click"  
                        Content="_Draw barrier" />  
                <Button Name="ShowServiceAreasButton"  
                        Grid.Row="1"  
                        Grid.ColumnSpan="2"  
                        Margin="5,5,5,5"  
                        Click="ShowServiceAreasButton_Click"  
                        Content="_Show service areas" />  
                <Button Name="ResetButton"  
                        Grid.Row="2"  
                        Grid.ColumnSpan="2"  
                        Margin="5,5,5,5"  
                        Click="Reset_Click"  
                        Content="_Reset" />
                <Button Name="UndoButton"  
                        Grid.Row="3"  
                        Grid.Column="0"  
                        Margin="5,5,5,5"  
                        Click="Undo_Click"  
                        Content="Undo - Ctrl+Z" />
                <Button Name="RedoButton"  
                        Grid.Row="3"  
                        Grid.Column="1"  
                        Margin="5,5,5,5"  
                        Click="Redo_Click"  
                        Content="Redo - Ctrl+Y" />
                <Border  Grid.Row="4" Grid.ColumnSpan ="2" BorderBrush="Black" Background="LightGray"  BorderThickness="0.5" Padding="5" Margin="5">
                    <TextBlock Text= "   To Place Facility using keyboard 
                                - Click the 'Place Facility' button. 
                                - Navigate the map using Arrow Keys. 
                                - Press Enter to set the Facility. 
                                - Esc or Tab to skip" TextWrapping="Wrap" FontSize="14" />
                </Border>
                <Border  Grid.Row="5" Grid.ColumnSpan ="2" BorderBrush="Black" Background="LightGray"  BorderThickness="0.5" Padding="5" Margin="5">
                    <TextBlock Text= "   To Draw Barrier using keyboard
                               - Click the 'Draw Barrier' button. 
                               - Navigate the map using Arrow Keys. 
                               - Press Enter to Add Vertex of Polyline.
                               - Esc to Skip.                               
                               - Tab to Finish." TextWrapping="Wrap" FontSize="14" />
                </Border>
            </Grid>  
        </Border>  
    </Grid>  
</UserControl>
