<UserControl x:Class="DemoApplicationAccessibility.DescribingNonTextContent.ThematicMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoApplicationAccessibility.DescribingNonTextContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             KeyDown="MyMapView_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Thematic Map - ACS Median Household Income"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="5"/>
            <TextBlock Text="This map generates live, audible descriptions of its content for accessibility. Enable a screen reader (like Windows Narrator) to hear these updates as you pan and zoom."
                   Margin="5"
                   TextWrapping="Wrap"/>
        </StackPanel>
        <esri:MapView x:Name="MyMapView"
          Grid.Row="1"
          AutomationProperties.Name="Thematic Map - ACS Median Household Income."
          AutomationProperties.HelpText="This map displays a Topographic Basemap with Thematic Layers at State, County and Tract level showing the Median Household Income in the United States. Use arrow keys to pan the map. Plus or Minus keys to zoom in or out. Number keys to open the respective popup and Escape Key to close the popup"
          Margin="10"
          GeoViewTapped="MyMapView_GeoViewTapped"
          Map="https://arcgisruntime.maps.arcgis.com/home/item.html?id=cd0bd2c1215449bab7b8177d1509d7c8" NavigationCompleted="MyMapView_NavigationCompleted"/>
        <Canvas x:Name="OverlayCanvas"
            IsHitTestVisible="False"
            Grid.Row="1"
            Background="Transparent" Margin="10,10,0,0" />
        <Grid Grid.Row="1" Background="#AA333333" Visibility="Collapsed" x:Name="PopupBackground" MouseDown="PopupBackground_MouseDown">
            <Border  BorderBrush="Black" BorderThickness="1" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <esri:PopupViewer x:Name="popupViewer" Margin="5" Width="400" MaxHeight="400"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
